<div class="container mt-5">
    <h1>Book a Slot</h1>
    <!-- Booking Form Section -->
    <%- include('./partials/messages.ejs') %>
    <div class="row mt-4">
        <div class="col-md-6">
            <form action="/iscrizioni/prenotazioni" method="POST" onsubmit="validateForm()">
                <div class="form-group">
                    <label for="date">Date:</label>
                    <input type="date" class="form-control" id="date" name="data" required min="<?= date('Y-m-d') ?>">
                </div>
                <div class="form-group">
                    <label for="startTime">Start Time:</label>
                    <input type="time" class="form-control" id="startTime" name="ora_inizio" required min="09:00" max="21:00">
                </div>
                <div class="form-group">
                    <label for="endTime">End Time:</label>
                    <input type="time" class="form-control" id="endTime" name="ora_fine" required min="10:00" max="22:00">
                </div>
                <button type="submit" class="btn btn-primary">Book Slot</button>
            </form>
        </div>
    </div>
</div>

<script>
    function validateForm() {
        let errors = [];
        const date = new Date(document.getElementById("data").value);
        const startTime = document.getElementById("ora_inizio").value;
        const endTime = document.getElementById("ora_fine").value;
        const startHour = parseInt(startTime.split(":")[0]);
        const endHour = parseInt(endTime.split(":")[0]);

        if (date < new Date()) {
            errors.push({ msg : "La data selezionata è già passata"});
        }
        if (startHour >= endHour) {
            errors.push({msg : "L'ora di inizio non è concorde con l'ora di fine"});
        }
        if ((endHour - startHour) < 1) {
            errors.push({msg : "Devi prenotare per almeno un'ora"});
        }
        if(errors.length>0){
            res.render('prenotazioni',{
                errors,
                data,
                ora_inizio,
                ora_fine
            });
        }
        return true;
    }
</script>

